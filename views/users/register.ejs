<% layout('layouts/boilerplate') %>
<div style="display: flex; justify-content: center; align-items: center; min-height: 50vh;">

  <form action="/register" method="POST" class="validated-form" novalidate style="background-color: #ffffff; border-radius: 10px; box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1); padding: 20px; width: 100%; max-width: 400px; display: flex; flex-direction: column; align-items: center; animation: fadeInUp 0.5s ease-in-out;">
      
      <h1 style="font-size: 24px; color: #333333; margin-bottom: 20px;">Register</h1>
      
      <div style="width: 100%; margin-bottom: 15px;">
          <label style="font-weight: bold; color: #555555; display: block; margin-bottom: 5px;">Username</label>
          <input class="form-control" style="width: 100%; padding: 10px; border: 1px solid #dddddd; border-radius: 5px; font-size: 14px;" type="text" id="username" name="username" required>
          <div class="valid-feedback">
            Looks good!
          </div>
      </div>

      <div style="width: 100%; margin-bottom: 15px;">
          <label style="font-weight: bold; color: #555555; display: block; margin-bottom: 5px;">Email</label>
          <input class="form-control" style="width: 100%; padding: 10px; border: 1px solid #dddddd; border-radius: 5px; font-size: 14px;" type="email" id="email" name="email" required>
          <div class="valid-feedback">
            Looks good!
          </div>
      </div>
      
      <div style="width: 100%; margin-bottom: 15px;">
          <label style="font-weight: bold; color: #555555; display: block; margin-bottom: 5px;">Password</label>
          <input class="form-control" style="width: 100%; padding: 10px; border: 1px solid #dddddd; border-radius: 5px; font-size: 14px;" type="password" id="password" name="password" required>
          <div class="valid-feedback">
            Looks good!
          </div>
      </div>
      
      <button style="background-color: #3498db; color: #ffffff; border: none; border-radius: 5px; padding: 10px; width: 100%; font-size: 16px; cursor: pointer; transition: background-color 0.3s;" class="btn-login">Register</button>
  </form>
</div>

<style>
  @keyframes fadeInUp {
      0% {
          opacity: 0;
          transform: translateY(20px);
      }
      100% {
          opacity: 1;
          transform: translateY(0);
      }
  }
</style>






